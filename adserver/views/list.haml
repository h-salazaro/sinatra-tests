%h1= @title

%table{border: 0, cellpadding: 0, cellspacing: 10, class: "list pure-table pure-table-horizontal pure-table-striped"}
  %tr{style: "text-align: left;"}
    %th Nombre
    %th Clicks
    %th Acciones
  - @ads.each_with_index do |ad, i|
    %tr
      %td
        %a{href: "/show/#{ad.id}"}= ad.title
      %td
        = ad.clicks.size
      %td
        %a{href: "/delete/#{ad.id}"}= "delete"
